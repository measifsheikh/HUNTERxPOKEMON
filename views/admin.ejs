<%- include('header') -%>


<div class="container container-admin">
    <div class="row">
        <h1>Admin Page &nbsp;&nbsp;</h1>
        <div class="admin-nav col-lg-12">
            <form action="/admin/logout" method="post">
                <button type="submit" class="btn btn-primary">Logout</button>
            </form>
            <form action="/admin/scoreboard" method="get">
                <button type="submit" class="btn btn-primary">Scoreboard</button>
            </form>
            <form action="/admin/register" method="get">
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
            <form action="/start" method="post">
                <button type="submit" class="btn btn-primary">Start Game</button>
            </form>
        </div>
        <form class="card-collect" action="/admin/card-submit" method="post">
            <h3>Card Collect</h3>
            <input type=text" name="teamName" placeholder="Enter Team Name">
            <input type=text" name="email" placeholder="Enter Leader's Email Id">
            <button type="submit" class="btn btn-primary">Collect</button>
        </form>
        <div class="card-collect">
            <form action="/start-single" method="post">
                <input type="text" name="email" placeholder="Enter Email">
                <button class="btn btn-primary">Start Game for Single Team</button>
            </form>
            <form action="/hint-single" method="post">
                <input type="text" name="email" placeholder="Enter Email">
                <input type="number" name="hint" placeholder="Enter Hint to Add">
                <button class="btn btn-primary">Add Hints for Single Team</button>
            </form>
        </div>
        <div class="col-lg-12">
            <h3>No of participants are = <%= noOfParticipants %> </h3>
        </div>
    </div>
</div>


<%- include('footer') -%>